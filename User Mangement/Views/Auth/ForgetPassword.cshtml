@model PasswordDetailsDTO
<div class="container w-25 mt-5 ">
    <div class="p-2 bg-info-subtle text-black rounded-3">
        <h3 class="text-center font-monospace text-dark">Create Password</h3>
    </div>
    <div class="card-body m-3">
        <h3>@ViewBag.Message</h3>
        @if (@ViewBag.Message == null)
        {
            <form asp-action="ForgetPassword" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Token"/>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-lable mb-2">
                        Password
                    </label>
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-lable mb-2">
                        Confirm Password
                    </label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button class="btn btn-success" type="submit">Set Password</button>
                </div>
            </form>
        }
    </div>
</div>