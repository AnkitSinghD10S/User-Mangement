@model UserDetails

<div class="container d-flex align-content-center justify-content-center">
 <div><h4 class="text-danger">@ViewBag.Message</h4> </div>
        @if (ViewBag.Message == null)
        {
        <div class="card shadow-lg border border-secondary rounded-4" style="width:480px;">
    <div class="p-2 bg- text-black rounded-3">
                <h3 class="text-center font-monospace text-dark fs-3 fw-bold">Register</h3>
    </div>
    <div class="card-body m-3">
        <form asp-action="RegisterUser" method="post">
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="form-lable mb-2">
                    FirstName*
                </label>
                <input asp-for="FirstName" class="form-control"  placeholder="FirstName"/>
                <span asp-validation-for="FirstName" class="text-warning mt-1"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LastName" class="form-lable mb-2">
                    LastName*
                </label>
                <input asp-for="LastName" class="form-control" placeholder="LastName" type="text"/>
                <span asp-validation-for="LastName" class="text-warning mt-1"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DOB" class="form-lable mb-2">
                    DOB*
                </label>
                <input asp-for="DOB" class="form-control" placeholder="" type="date"/>
                <span asp-validation-for="DOB" class="text-warning mt-1"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Gender" class="form-lable mb-2">
                    Gender*
                </label>
                <select asp-for="Gender" class="d-block" >
                    <option value="">Please Select</option>
                    <option vlaue="Male">Male</option>
                    <option vlaue="Female">Female</option>
                    <option vlaue="Others">Others</option>
                </select>
                <span asp-validation-for="Gender" class="text-warning mt-1 "></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EmailAddress" class="form-lable mb-2">
                    Email Id *
                </label>
                <input asp-for="EmailAddress" class="form-control" placeholder="Email Id" type="text"/>
                <span asp-validation-for="EmailAddress" class="text-warning mt-1"></span>
            </div>
            @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <div class="d-flex justify-content-between">
                <button class="btn btn-success w-100" type="submit">Register</button>
            </div>
            <div class="d-flex mt-5 justify-content-between text-danger">
                        <span> Already have an account? <a asp-controller="Auth" asp-action="LoginUser">Login</a></span>
            </div>
        </form>
    </div>
</div>
        } 
        </div>