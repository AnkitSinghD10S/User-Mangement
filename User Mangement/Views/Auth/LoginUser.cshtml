@model UserLoginDTO
<div class="container d-flex align-content-center justify-content-center mt-4">
<div class="card shadow-lg p-4 border border-secondary rounded-4" style="width:480px;">
    <div class="p-2 text-black rounded-3">
        <h3 class="text-center font-monospace text-dark fs-3 fw-bold">Login</h3>
    </div>
    <div class="card-body m-5 w-75">
        <form asp-action="LoginUser" method="post">
            <div class="form-group mb-3 w-100">
                <label asp-for="EmailId" class="form-lable mb-2">
                    Email Id*
                </label>
                <input asp-for="EmailId" class="form-control w-100" placeholder="Email Id" type="email" />
                <span asp-validation-for="EmailId" class="text-warning mt-1"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-lable mb-2">
                    Password*
                </label>
                <input asp-for="Password" class="form-control" placeholder="Password" type="password"/>
                <span asp-validation-for="Password" class="text-warning mt-1"></span>
            </div>
                <div asp-validation-for="EmailId" class="text-danger"></div>
                <div asp-validation-for="Password" class="text-danger"></div>
                <div class="d-flex justify-content-between">
                <button class="btn btn-success w-100" type="submit">Login</button>
            </div>
            <div class="mt-2 text-danger">
                <span class="fs-6"> Don't have an account?  <a asp-controller="Auth" asp-action="RegisterUser">Register</a></span>
                <br />
                <span stye=""> Forgot Password ? <a asp-controller="Auth" asp-action="RetrivePassword">Forget Password</a></span>
            </div>
        </form>
    </div>
</div>
</div>