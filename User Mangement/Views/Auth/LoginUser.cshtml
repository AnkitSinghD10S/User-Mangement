@model UserLoginDTO
<div class="container w-25 mt-5" style="margin-bottom:200px;">
    <div class="p-2 bg-info-subtle text-black rounded-3">
        <h3 class="text-center font-monospace text-dark">Login</h3>
    </div>
    <div class="card-body m-5 w-75">
        <form asp-action="LoginUser" method="post">
            <div class="form-group mb-3 w-100">
                <label asp-for="EmailId" class="form-lable mb-2">
                    Email Id*
                </label>
                <input asp-for="EmailId" class="form-control w-100" placeholder="Email Id" type="email" />
                <span asp-validation-for="EmailId" class="text-warning mt-1"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-lable mb-2">
                    Password*
                </label>
                <input asp-for="Password" class="form-control" placeholder="Password" type="password"/>
                <span asp-validation-for="Password" class="text-warning mt-1"></span>
            </div>
            @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <div class="d-flex justify-content-between">
                <button class="btn btn-success" type="submit">Login</button>
            </div>
            <div class="d-flex mt-2 justify-content-between text-danger">
                <span stye="margin-right:-10px;"> Don't have an account?  <a asp-controller="Auth" asp-action="RegisterUser">Register</a></span>
                </div>
                <div class="d-flex mt-2 justify-content-between text-danger">
                <span stye="margin-right:-10px;"> Forgot Password ? 
                    <br/>
                    <a asp-controller="Auth" asp-action="RetrivePassword">Forget Password</a>
                </span>
            </div>
        </form>
    </div>
</div>