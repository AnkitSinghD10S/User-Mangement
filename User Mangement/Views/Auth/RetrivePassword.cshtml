@model RetrivePasswordDTO
<div><h4 class="text-danger">@ViewBag.Message</h4> </div>
        @if (ViewBag.Message == null)
{
    <div class="container w-25 mt-5" style="margin-bottom:200px;">
        <div class="p-2 bg-info-subtle text-black rounded-3">
            <h3 class="text-center font-monospace text-dark">Retrive Password</h3>
        </div>
        <div class="card-body m-5 w-75">
            <form asp-action="RetrivePassword" method="post">
                <div class="form-group mb-3 w-100">
                    <label asp-for="EmailAddress" class="form-lable mb-2">
                        Email Id
                    </label>
                    <input asp-for="EmailAddress" class="form-control w-100" placeholder="Email Id" type="email" />
                    <span asp-validation-for="EmailAddress" class="text-warning mt-1"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button class="btn btn-success" type="submit">send Mail</button>
                </div>
            </form>
        </div>
    </div>
}