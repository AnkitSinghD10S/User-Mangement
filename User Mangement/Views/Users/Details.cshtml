@model UserDetails
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-gradient text-primary">
                    <h2>@Model.FirstName Details</h2>
                </div>
                <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="form-label">
                                FirstName
                            </label>
                            <p>@Model.FirstName</p>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="form-label">
                                LastName
                            </label>
                           <p>@Model.LastName</p>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="DOB" class="form-label">
                                Date of Birth
                            </label>
                           <p>@Model.DOB</p>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Gender" class="form-label">
                                Gender
                            </label>
                            <p>@Model.Gender</p>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="EmailAddress" class="form-label">
                                Email Address
                            </label>
                            <p>@Model.EmailAddress</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Users" asp-action="Users" class="btn btn-warning">Close</a>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}