@model UserDetails
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-gradient text-bg-primary">
                    <h2>Edit User Details</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="UserID" />
                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="form-label">
                                FirstName
                            </label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter FirstName" value=@Model.FirstName />
                            <span asp-validation-for="FirstName" class="text-warning mt-1"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="form-label">
                                LastName
                            </label>
                            <input asp-for="LastName" row="5" class="form-control" placeholder="Enter LastName" value=@Model.LastName />
                            <span asp-validation-for="LastName" class="text-warning mt-1"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="DOB" class="form-label">
                                Date of Birth
                            </label>
                            <input asp-for="DOB" class="form-control" type="date" value=@Model.DOB />
                            <span asp-validation-for="DOB" class="text-warning mt-1"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Gender" class="form-label">
                                Gender
                            </label>
                            <select asp-for="Gender" class="d-block">
                                <option value=@Model.Gender>Please Select</option>
                                <option vlaue="Male">Male</option>
                                <option vlaue="Female">Female</option>
                                <option vlaue="Others">Others</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-warning mt-1"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="EmailAddress" class="form-label">
                                Email Address
                            </label>
                            <input asp-for="EmailAddress" class="form-control" type="email" value=@Model.EmailAddress />
                            <span asp-validation-for="EmailAddress" class="text-warning mt-1"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-success" type="submit">Edit</button>
                            <a asp-controller="Users" asp-action="Users" class="btn btn-warning">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}